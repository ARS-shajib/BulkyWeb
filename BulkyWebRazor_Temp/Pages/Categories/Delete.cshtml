@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="row pb-2">
        <h1>Delete Category</h1>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Category.Name" class="p-0"></label>
        <input asp-for="Category.Name" class="form-control" disabled />
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Category.DisplayOrder" class="p-0"></label>
        <input asp-for="Category.DisplayOrder" disabled class="form-control" />
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a class="btn btn-outline-secondary form-control" asp-page="/category/index">
                Back to List
            </a>
        </div>
    </div>
</form>